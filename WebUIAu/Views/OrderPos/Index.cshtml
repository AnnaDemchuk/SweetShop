@model IEnumerable<Shop.BLL.Models.OrderPositionDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Позиции заказа</h2>

<p>
    @Html.ActionLink("Новый", "Edit", new { id = 0 }, new { @class = "btn-sm btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderPosId)
        </th>
        @*
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        *@
        <th>
            @Html.DisplayNameFor(model => model.GoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.OrderPosPrice)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.OrderPosAmount)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderPosId)
        </td>
        @*
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        *@
        <td>
            @Html.DisplayFor(modelItem => item.GoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderPosPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderPosAmount)
        </td>

        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.OrderPosId }, new { @class = "btn-sm btn-success" })
            @Html.ActionLink("Детали", "Details", new { id = item.OrderPosId }, new { @class = "btn-sm btn-success" })
            @Html.ActionLink("Удалить", "Delete", new { id = item.OrderPosId }, new { @class = "btn-sm btn-danger delOrderPos", data_id = item.OrderPosId })
        </td>
    </tr>
    }

</table>

@section ScriptsDelete{
    <script type="text/javascript">

        $(function () {
            $(".delOrderPos").click(function (e) {
                e.preventDefault()
                if (confirm('Do you want to delete this OrderPos?')) {
                    $.ajax({
                        url: "@Url.Action("Delete", "OrderPos")",
                        data: { id: $(this).attr('data-id') },
                        type: 'POST',
                        success: function (data) {
                            if (data == "OK")
                                window.location.href = "@Url.Action("Index", "OrderPos")"
                            else
                                alert("Error!!Good has this OrderPos")
                        },
                        error: function (data) {
                            alert(data);
                        }
                    });
                }
            });
        });

    </script>
}

