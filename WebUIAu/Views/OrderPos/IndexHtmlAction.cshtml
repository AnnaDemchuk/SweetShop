@{
    ViewBag.Title = "IndexHtmlAction";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2> </h2>

@Html.Action("Positions", "OrderPos")


@section ScriptsDelete{
    <script type="text/javascript">

        $(function () {
           // $(".delOrder").click(function (e) {
            $('body').on('click', '.delItem', function (e) {
                e.preventDefault()
                if (confirm('Do you want to delete this OrderPosition?')) {
                    $.ajax({
                        url: "@Url.Action("Delete", "Order")",
                        data: { id: $(this).attr('data-id') },
                        type: 'POST',
                        success: function (data) {
                            if (data == "OK")
                                window.location.href = "@Url.Action("IndexHtmlAction", "OrderPos")"
                            else
                                alert("Error!!Order has this OrderPosition")
                        },
                        error: function (data) {
                            alert(data);
                        }
                    });
                }
            });
        });

    </script>
}


