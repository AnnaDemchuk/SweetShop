@{
    ViewBag.Title = "IndexHtmlAction";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2> </h2>

@Html.Action("IndexListing", "Unit")


@section ScriptsDelete{
    <script type="text/javascript">
        $(function () {
            $('body').on('click', '.delUnit', function (e) {
           // $(".delUnit").click(function (e) {
                e.preventDefault()
                if (confirm('Do you want to delete this Unit?')) {
                    $.ajax({
                        url: "@Url.Action("Delete", "Unit")",
                        data: { id: $(this).attr('data-id') },
                        type: 'POST',
                        success: function (data) {
                            if (data == "OK")
                                window.location.href = "@Url.Action("IndexHtmlAction", "Unit")"
                            else
                                alert("Error!! Product has this Unit")
                        },
                        error: function (data) {
                            alert(data);
                        }
                    });
                }
            });
        });

    </script>
}