@model IEnumerable<Shop.BLL.Models.PhotoDTO>


@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6">
                <br>
                @*@Html.DisplayFor(modelItem => item.PathPhoto) <br>*@
                <img src="@item.PathPhoto" height="200" /> <br>
                @Html.ActionLink("Удалить", "Delete", new { id = item.PhotoId }, new { @class = "btn-sm btn-danger delItem", data_id = item.PhotoId }) <br>
            </div>
        }
    </div>
}
else
{
    <div class="alert-danger">
        Нет фото <br>
    </div>
}



