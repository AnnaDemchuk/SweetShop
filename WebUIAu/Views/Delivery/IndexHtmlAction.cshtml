@{
    ViewBag.Title = "IndexHtmlAction";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2> </h2>

@Html.Action("IndexListing", "Delivery")

@section ScriptsDelete{
    <script type="text/javascript">

        $(function () {
          //  $(".delItem").click(function (e) {
            $('body').on('click', '.delItem', function (e) {
                e.preventDefault()
                if (confirm('Do you want to delete this Delvery?')) {
                    $.ajax({
                        url: "@Url.Action("Delete", "Delvery")",
                        data: { id: $(this).attr('data-id') },
                        type: 'POST',
                        success: function (data) {
                            if (data == "OK")
                                window.location.href = "@Url.Action("IndexHtmlAction", "Delvery")"
                            else
                                alert("Error!! Order has this Delvery")
                        },
                        error: function (data) {
                            alert(data);
                        }
                    });
                }
            });
        });

    </script>
}


