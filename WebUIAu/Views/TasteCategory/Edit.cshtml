@model Shop.BLL.Models.TasteCategoryDTO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>  </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TasteCategoryId, new { htmlAttributes = new { @class = "form-control" } })


        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownList("CategoryId") <br>
                @*Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TasteCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TasteCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TasteCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TasteCategoryPathPhoto, htmlAttributes: new { @class = "control-label col-md-2" }) <br>
            <br>
            <div class="col-md-10">
                <img src="@Model.TasteCategoryPathPhoto" height="200" alt="no img" /> <br>
                @Html.ActionLink("Добавить фото", "UploadPhoto", "TasteCategory", new { id = Model.TasteCategoryId }, new { @class = "btn-sm btn-info" })<br>

                @if (@Model.TasteCategoryPathPhoto != null)
                {
                    @Html.ActionLink("Удалить фото", "DeletePhoto", new { id = Model.TasteCategoryId }, new { @class = "btn-sm btn-danger delItem", data_id = Model.TasteCategoryId })
                }

            </div>
        </div>

        @Html.HiddenFor(model => model.TasteCategoryPathPhoto, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Список", "IndexHtmlAction", null, new { @class = "btn-sm btn-primary" })
</div>


@section ScriptsDelete{
<script type="text/javascript">
                            $(function () {
                             //   $(".delItem").click(function (e) {
                                $('body').on('click', '.delItem', function (e) {
                                    e.preventDefault()
                                    if (confirm('Do you want to delete this Photo TasteCategory?')) {
                                        $.ajax({
                                            url: "@Url.Action("DeletePhoto", "TasteCategory")",
                                            data: { id: $(this).attr('data-id') },
                                            type: 'POST',
                                            success: function (data) {
                                                if (data == "OK")
                                                    window.location.href = "@Url.Action("Edit", "TasteCategory", new { id = @ViewBag.TasteCategoryId })"
                           
                                                else
                                                    alert(data);
                                            },
                                            error: function (data) {
                                                alert(data);
                                            }
                                        });
                                    }
                                });
                            });
</script>
}
