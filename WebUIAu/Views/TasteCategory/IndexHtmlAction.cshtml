@{
    ViewBag.Title = "IndexHtmlAction";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2> </h2>

@Html.Action("IndexListing", "TasteCategory")

@section ScriptsDelete{
    <script type="text/javascript">
                            $(function () {
                             //   $(".delItem").click(function (e) {
                                $('body').on('click', '.delItem', function (e) {
                                    e.preventDefault()
                                    if (confirm('Do you want to delete this TasteCategory?')) {
                                        $.ajax({
                                            url: "@Url.Action("Delete", "TasteCategory")",
                                            data: { id: $(this).attr('data-id') },
                                            type: 'POST',
                                            success: function (data) {
                                                if (data == "OK")
                                                    window.location.href = "@Url.Action("IndexHtmlAction", "TasteCategory")"
                                                else
                                                    alert(data);
                                            },
                                            error: function (data) {
                                                alert(data);
                                            }
                                        });
                                    }
                                });
                            });
    </script>
}
