@model IEnumerable<Shop.BLL.Models.StatusOrderDTO>

@{
    ViewBag.Title = "Index";
}

<h2>   </h2>

<p>
    @Html.ActionLink("Новый", "Edit", new { id = 0 }, new { @class = "btn-sm btn-primary" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.StatusId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.StatusName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.StatusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.StatusId }, new { @class = "btn-sm btn-success" })
                @Html.ActionLink("Удалить", "Delete", new { id = item.StatusId }, new { @class = "btn-sm btn-danger delStatus", data_id = item.StatusId })<br>
            </td>
        </tr>
    }

</table>


