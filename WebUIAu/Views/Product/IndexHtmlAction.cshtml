@{
    ViewBag.Title = "IndexHtmlAction";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2> </h2>

@Html.Action("IndexListing", "Product")



@section ScriptsDelete{
    <script type="text/javascript">
                        $(function () {
                          //  $(".delProduct").click(function (e) {
                            $('body').on('click', '.delProduct', function (e) {
                                e.preventDefault()
                                if (confirm('Do you want to delete this good?')) {
                                    $.ajax({
                                        url: "@Url.Action("Delete", "Product")",
                                        data: { id: $(this).attr('data-id') },
                                        type: 'POST',
                                        success: function (data) {
                                            if (data == "OK")
                                                window.location.href = "@Url.Action("IndexHtmlAction", "Product")"
                                            else
                                                alert(data);
                                        },
                                        error: function (data) {
                                            alert(data);
                                        }
                                    });
                                }
                            });
                        });
    </script>

}
