                    @Html.DisplayFor(modelItem => item.ManufacturerId)
                </td>
            *@

            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerName)
            </td>

            @*
                <td>
                   Html.DisplayFor(modelItem => item.UnitId)
                </td>
            *@
            <td>
                @Html.DisplayFor(modelItem => item.UnitName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ProductId }, new { @class = "btn-sm btn-success" })
                @*Html.ActionLink("Детали", "Details", new { id = item.ProductId }, new { @class = "btn-sm btn-info" })*@
                @Html.ActionLink("Удалить", "Delete", new { id = item.ProductId }, new { @class = "btn-sm btn-danger delProduct", data_id = item.ProductId })<br>
            </td>
        </tr>
    }

</table>



@section ScriptsDelete{
    <script type="text/javascript">
                        $(function () {
                            $(".delProduct").click(function (e) {
                                e.preventDefault()
                                if (confirm('Do you want to delete this good?')) {
                                    $.ajax({
                                        url: "@Url.Action("Delete", "Product")",
                                        data: { id: $(this).attr('data-id') },
                                        type: 'POST',
                                        success: function (data) {
                                            if (data == "OK")
                                                window.location.href = "@Url.Action("Index", "Product")"
                                            else
                                                alert(data);
                                        },
                                        error: function (data) {
                                            alert(data);
                                        }
                                    });
                                }
                            });
                        });
    </script>

}
