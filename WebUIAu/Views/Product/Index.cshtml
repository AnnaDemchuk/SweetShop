            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodAbout)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodComment)
            </td>

            @*
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
            *@

            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>

